@model Projeto_Final.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-color: #f1f1f1;
        }

        .jumbotron {
            background-color: #f8f9fa;
            padding: 2rem 1rem;
            text-align: center;
            margin: 80px 0 2rem 0;
        }

            .jumbotron h1 {
                font-size: 2.5rem;
                margin-bottom: 1rem;
                color: #007bff;
            }

        .form-container {
            display: flex;
            justify-content: center;
            padding: 2rem;
        }

        .form-box {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            width: 100%;
            max-width: 600px;
        }

        h4 {
            margin-bottom: 1.5rem;
            color: #007bff;
        }

        .form-group label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #ffffff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-default {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #ffffff;
        }

            .btn-default:hover {
                background-color: #ffffff;
                color: #6c757d;
            }
    </style>
</head>
<body>

    <div class="jumbotron">
        <h1>Criar um novo colaborador</h1>
        <p class="lead">Por favor, preencha os campos abaixo para registar o novo colaborador</p>
    </div>

    <div class="form-container">
        <div class="form-box">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Dados Pessoais</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Registar" />
                </div>
            }
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>